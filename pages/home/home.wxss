/* pages/home/home.wxss */
.back {
  padding: 0px;
}
.container{
  /* display: block; */
  padding: 10pt;
  background-color: #f6f6f6;
  border-radius: 5pt 5pt 0 0;
}
.nav-tab{
  display: flex;
  justify-content: space-between;
}
.nav-tab-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15pt 20pt;
}
.nav-tab-item-font{
  font-size: 11pt;
  margin-top: 4pt;
  color: #ffffff;
}
.nav-icon{
  font-size: 30px;
  color: #ffffff;
}
.normal-icon{
  /* font-size: 30px; */
  color: #999999;
}
.exhibition-title{
  font-size: 14pt;
  font-weight: 600;
}
.exhibition-list{
  font-size: 11pt;
  margin-top: 10pt;
  background: #ffffff;
  border-radius: 5pt;
}
.exhibition-list-info{
  padding: 10pt;
  color: #999999;
}
.exhibition-list-banner{
  width:100%;height:90pt;
}
.exhibition-list-banner-img{
  width:100%;height:100%;border-radius:5pt 5pt 0 0;
}
.exhibition-list-info-title{
  color: #333333;
  display: flex;
  justify-content: space-between;
}
.exhibition-list-info-title-left{
  font-size: 13pt;
  font-weight: 600;
  color: #333333;
}
.exhibition-list-info-title-right{
  font-size: 11pt;
  color: #999999;
}