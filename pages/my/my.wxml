<!--pages/my/my.wxml-->
<view class=".back">  
  <view class="my">
  <view class="my-head">
    <open-data style="border-radius:50%" class="my-head" type="userAvatarUrl"></open-data>
  </view>
    <view class="my-info">
      <open-data class="my-info-name" type="userNickName"></open-data>
      <view class="my-info-job">职务：{{userJob}}</view>
    </view>
  </view>
  <view class="joinInfo">
  <text wx:if="{{exbUserOperationList.length === 0}}">暂时没有参展信息</text>
  <text wx:if="{{exbUserOperationList.length > 0}}">您累计参展{{count}}场</text>
  </view>
  <view class="container">
    <view class="info">
      <view class="info-title">个人信息</view>
      <view class="info-item">
        <text class="info-item-l">姓名</text>
        <view>
          <text>{{userName}}</text>
          <!-- <icon class="iconfont icon-gengduohui nav-icon"></icon> -->
        </view>
      </view>
      <view class="info-item">
        <text class="info-item-l">职务</text>
        <view>
          <text>{{userJob}}</text>
          <!-- <icon class="iconfont icon-gengduohui nav-icon"></icon> -->
        </view>
      </view>
      <view class="info-item">
        <text class="info-item-l">医院</text>
        <view>
          <text>{{userWorkUnit}}</text>
          <!-- <icon class="iconfont icon-gengduohui nav-icon"></icon> -->
        </view>
      </view>
      <view class="info-item info-item-border">
        <text class="info-item-l">联系方式</text>
        <view>
          <text>{{userPhone}}</text>
          <!-- <icon class="iconfont icon-gengduohui nav-icon"></icon> -->
        </view>
      </view>
    </view>
    <view class="record">
      <view class="record-title">参展记录</view>
        <view class="record-list">
        <view class="exhibition-list" wx:for="{{exbExhibitionList}}" wx:for-item="exhi" wx:key='key'>
          <view class="exhibition-list-banner">
            <image class="exhibition-list-banner-img" src="{{exhi.exhibitionBannerUrl }}" alt="" ></image>
            <view class="banner-floating">
              <text>{{exhi.exhibitionName}}</text>
            </view>
          </view>
          <view class="active" wx:key='key' wx:for="{{exhi.activeList}}"  wx:for-item="active">
            <view class="{{(index > 0 ) ? 'active-line': ''}}"></view>
            <view class="exhibition-list-info">
              <view class="active-left">
              <text>{{active.activeName}}</text>
              <view style="display:inline-block;margin-left:5pt" class="active-r active-list-status-end" >
                <view class="{{activeStateClass[active.activeStatus]}}">
                {{activeState[active.activeStatus]}}
                </view>
              </view>
              <view class="exhibition-list-info-time" >
                <icon class="iconfont icon-shijian"></icon>
                {{active.activeStartTime}}
              </view>
              <view class="exhibition-list-info-position" >
                <icon class="iconfont icon-didian"></icon>
                {{active.activeAddress}}
                  </view>
              </view>
            </view>
          </view>
        </view>
        <!--  -->
      </view>
    </view>
  </view>

</view>