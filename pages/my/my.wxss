/* pages/my/my.wxss */
.back{
  padding-left: 0;
  padding-right: 0;
}
.container{
background: #f5f5f5;
}
.joinInfo{
  background: #44495E;
  color: #ffffff;
  margin: 0 10pt 0;
  border-radius: 5pt 5pt 0 0;
}
.joinInfo text{
  line-height: 24pt;
  font-size: 10pt;
  margin-left: 6pt;
}
.my{
  display: flex;
  align-items: center;
  margin: 10pt 15pt;
}
.my-head{
  overflow: hidden;
  width: 40pt;
  height: 40pt;
  background: #ffffff;
  border-radius: 50%;
}
.my-info{
  margin-left: 10pt;
  color: #ffffff;
}
.my-info-name{
  color: #ffffff;
  font-size: 12pt;
}
.my-info-job{
  color: #ffffff;
  font-size: 10pt;
}
/* info */
.info{
  background: #ffffff;
  padding: 15pt 10pt 0;
}
.info-title{
  font-weight: 600;
  font-size: 14pt;
}
.info-item{
  color: #999999;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #999999;
  padding: 10pt 0;
}
.info-item-l{
  color: #333333;
}
.info-item-border{
  border: none;
}
/* 参展记录 */
.record{
  background: #ffffff;
  margin-top: 10pt;
  padding: 10pt;
  height: 100%;
}
/* 展会 */
.exhibition-list{
  font-size: 11pt;
  margin-top: 10pt;
  background: #ffffff;
  border-radius: 5pt;
  box-shadow: 0pt 1pt 3pt rgba(82, 135, 255, 0.1);
}
.active-line{
  margin: 0 10pt;
  height: 1px;
  background: #999999;
}
.exhibition-list-info{
  padding: 10pt;
  color: #999999;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.active-r{
  margin-right: 10pt;
}
.active-list-status-end{
  color: #E95E6A;
}
.active-list-status-pending{
  color: #21BD9D;
}
.active-list-status-permit{
  color: #4575FF;
}
.active-list-status-close{
  color: #999999;
}
.exhibition-list-banner{
  width:100%;height:90pt;
}
.exhibition-list-banner-img{
  width:100%;height:100%;border-radius:5pt 5pt 0 0;
}
.banner-floating{
  background: rgba(0, 0, 0, 0.1);
  line-height: 16pt;
  text-align: right;
  color: #ffffff;
  position: relative;
  top: -20pt;
}
.banner-floating text{
  margin-right: 10pt;
  font-size: 10pt;
}
.exhibition-list-info-title{
  color: #333333;
  display: flex;
  justify-content: space-between;
}
.exhibition-list-info-title-left{
  font-size: 13pt;
  font-weight: 600;
  color: #333333;
}
.exhibition-list-info-title-right{
  font-size: 11pt;
  color: #999999;
}