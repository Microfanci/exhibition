/* 活动 */
.activeList{
  background: #ffffff;
  /* border-radius: 0 0 5pt 5pt; */
  padding: 6pt 7pt;
}
.active-border{
  border: 1px solid #4575FF;
}
.active-list{
  /* margin-bottom: 10pt; */
  border-radius: 5pt;
  background: #F6F6F6;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8pt;
}
.active-list-info{
  color: #999999;
  flex:1
}
.active-list-status-end{
  min-width: 40pt;
}
.active-pedding{
  background: #21BD9D;
  padding:1pt 2pt;
  color:#ffffff;
  font-size:9pt;
  border-radius:1pt;font-weight:500;
}
.active-end{ 
  background:#E95E6A;
  padding:1pt 2pt;
  color:#ffffff;
  font-size:9pt;
  border-radius:1pt;font-weight:500;
}
.active-start{ 
  background:#4575FF;
  padding:1pt 2pt;
  color:#ffffff;
  font-size:9pt;
  border-radius:1pt;font-weight:500;
}
.active-list-info-title{
  font-size: 12pt;
  color: #333333;
  font-weight: 600;
}
.active-list-status-end{
  color: #E95E6A;
}
.active-list-status-pending{
  color: #21BD9D;
}
.active-list-status-permit{
  color: #4575FF;
}
.active-list-status-close{
  color: #999999;
}
/* 展会 */
.exhibition-list{
  font-size: 11pt;
  margin-top: 10pt;
  background: #ffffff;
  border-radius: 5pt;
}
.exhibition-list-info{
  padding: 10pt;
  color: #999999;
}
.exhibition-list-banner{
  width:100%;height:90pt;
}
.exhibition-list-banner-img{
  width:100%;height:100%;border-radius:5pt 5pt 0 0;
}
.exhibition-list-info-title{
  color: #333333;
  display: flex;
  justify-content: space-between;
}
.exhibition-list-info-title-left{
  font-size: 13pt;
  font-weight: 600;
  color: #333333;
}
.exhibition-list-info-title-right{
  font-size: 11pt;
  min-width: 40pt;
  color: #999999;
}