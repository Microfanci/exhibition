page { 
  padding: 0 10pt;
}
.success-toast-back{
  position: absolute;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  margin: auto;
  display: flex;
  align-items: center;
  justify-content: center;
}
.success-toast-white{
  background: #ffffff;
  border-radius: 5pt;
  width: 70%;
  height: 46%;
}
.success-toast-img{
  position: absolute;
  left: 94px;
  top: 72px;
}
.special{
  color: #3871F2 !important;
}
.img{
  width: 100%;
  display: block;
}
.tab{
  border-radius: 5pt 5pt 0 0;
  padding-top: 5pt;
  display: flex;
  background: #ffffff;
}
.list{
  background: #ffffff;
  padding: 5pt 0;
  border-radius: 0 0 5pt 5pt;
}
.list-show{
  display: none;
}
.listDetail-show{
  display: none;
}
.actve{
  margin: 5pt 6pt;
}
.active-show{
  color: #4575FF;
  border-bottom: 2pt solid #4575FF;
}
