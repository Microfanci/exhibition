/**app.wxss**/
@import "/iconfont.wxss";
/* 小程序页面背景颜色 */
page { 
  background-color: #F6F6F6; 
  height: 100%;
  box-sizing: border-box;
  font-size: 11pt;
  color: #333333;
}
.icon-shijian,.icon-didian{
  font-size: 10pt !important;
  margin-top: -7pt !important;
}
/* 页面公用的样式 */
.btn-blue{
  background: #4575FF!important;
  border-radius: 44pt!important;
  width: 100% !important;
  color: #ffffff !important;
}
.btn-dis{
  background: #e5e5e5!important;
  border-radius: 44pt!important;
  width: 100% !important;
  color: #999999 !important;
}
/* 单页面分块背景 */
.back {
  height: 100vh;
  padding: 10pt;
  box-sizing: border-box;
  background: linear-gradient(to bottom, #3871F2 0%, #3871F2 22%, #F6F6F6 21%, #F6F6F6 100%);
}
/* 内容区域 */
.container {
  background-color: #F6F6F6;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
} 
